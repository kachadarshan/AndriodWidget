<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qubitsolutionlab.Tablayout.Tablayout_example">

    <include
        android:id="@+id/app_barr"
        layout="@layout/appbar_main"></include>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_barr"
        android:background="#ECE9E9">

    </com.google.android.material.tabs.TabLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tablayot">


    </androidx.viewpager.widget.ViewPager>
</RelativeLayout>